<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: true %>
  <%= f.text_field :genre_name %>
  <br />
  <%= f.fields_for :notes do |n| %>
    <%= n.label :song_notes_1 %>
    <%= n.text_field :content %>
  <% end %>

  <%= f.submit %>
<% end %>